<video id="bgVideo" preload="auto" autoplay="true" loop="loop" muted="muted" volume="0" poster="/assets/poster.png">
   
    <source src="/assets/bg.webm" type="video/webm" />
    <source src="/assets/bg.mp4" type="video/mp4" />
      Your browser does not support the video tag.
  </video> 
<div class="container" style="opacity:0.95;">
   <div class="row">
      <div class="col-md-6 col-md-offset-3 panel panel-default">
           
         <div class="center hero-unit">
	      <h1>Log in to <img alt="Rails" src="/assets/logo.png" height="60"/></h1>
            
            <div class="row">
                 <div class="span6 offset3">
                       <button class="btn btn-facebook"><i class="fa fa-facebook"></i> | Login with Facebook</button>
		</div>
  		<div class="span6 offset3" style="margin-top:50px;">
 			<form accept-charset="UTF-8" action="/sessions" method="post" role="form">
                                  
				  <div class="form-group">
				    <input id="session_email" name="session[email]" type="text" placeholder="Enter Email" />
				  </div>
				  <div class="form-group">
				    <input id="session_password" name="session[password]" type="password" placeholder="Enter Password"/>
				  </div>
				  <input class="btn btn-large btn-primary" name="commit" type="submit"
				       value="Sign in" />
                                  <input type="checkbox" name="myCheckbox" checked value="On">
                  	</form>
		</div>
                 
                <div class="span6 offset3" style="margin-top:50px;">
                       <a href="#">Forgot Password</a>
		</div>
	    </div>
                     
            
         </div>
      </div>
      
  </div>
  
</div>
