<% provide(:title, 'Admin Dashboard- List Users')%>
<%= render 'layouts/header' %>
<div class="container">
 <h1>All Users</h1>



 <div class="col-lg-10"> 

    <% if @users%>
	    <%= will_paginate @users, renderer: BootstrapPagination::Rails %>
	   <table class="table table-hover">
	     <thead>
	      <th>Id</th>
	      <th>Avatar</th> 
	      <th>Name</th>
	      <th>Email</th> 
	    </thead>
	    <tbody>
	     <% @users.each do |user| %>
	      <tr>
		<td><%= user.id %></td>
		<td><img alt="user<%= user.id %>" src="<%= user.avatar %>" height="80"></td>
		<td><%= user.name %></td>
		<td><%= user.email %></td>  
	     </tr>
	  <% end %> 
	    </tbody>
	  </table>
	   <%= will_paginate @users, renderer: BootstrapPagination::Rails %>
    <% end %>
 </div>

 

</div>

